<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/add/db" VERSION="20200213" COMMENT="XMLDB file for Block plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
    <TABLES>
        <TABLE NAME="blocks_table" COMMENT='A table for block'>
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
				<FIELD NAME="message" TYPE="text" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="message_type" TYPE="text" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="message_attribute" TYPE="text" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="roleid" TYPE="text" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>

            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
